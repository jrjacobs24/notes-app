    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "connected-react-router": "^6.2.2",
    "express": "^4.16.4",
    "lowdb": "^1.0.0",
    "normalize.css": "^8.0.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-act": "^1.7.4",
    "redux-saga": "^1.0.0",
