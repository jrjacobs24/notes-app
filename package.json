{
  "name": "notes-app",
  "version": "1.0.0",
  "description": "A React/Redux note taking application setup on an Express server with a JSON DB via lowdb for simple local storage.",
  "scripts": {
    "build":  "yarn install && webpack --env.production --progress && node src/server/index.js",
    "client": "yarn install && webpack --env.development --watch --progress --colors",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "lint": "eslint src/**",
    "test": "jest"
  },
  "author": "JJ Jacobs <jrjacobs24@gmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
